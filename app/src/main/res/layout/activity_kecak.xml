<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="false"
    android:focusableInTouchMode="true"
    tools:context=".KecakActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/fotoKecak"
                        android:background="#000"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:layout_marginBottom="20dp"/>

                    <TextView
                        android:id="@+id/judulKecak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtJadwal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <com.uncopt.android.widget.text.justify.JustifiedTextView
                        android:id="@+id/txtDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtIdPengunjung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtIdKecak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/txtNamaPengunjung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txtHarga"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/txtTanggal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tanggal Pesanan"
                        android:inputType="date"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/editJumlah"
                            android:hint="Jumlah Pesanan"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:layout_width="185dp"
                            android:layout_height="wrap_content" />

                        <Button
                            android:id="@+id/btnPenjumlahan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/btnPemesanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pesan"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </FrameLayout>

</LinearLayout>